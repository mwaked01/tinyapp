<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <%if (user) {%>
      <!-- when the user_id cookie has a truthy value, the user is logged in -->
      <form class="" action="/logout" method="POST">
        Logged in as: <%=user.email%><button type="submit" class="btn btn-success">Logout</button>
      </form>
    <%}else {%>
      <!-- when the user_id cookie is not undefined, user is not logged in -->
    <form class="" action="/login" method="GET">
        <button type="submit" class="btn btn-success">Login</button>
    </form> 
    <form class="" action="/register" method="GET">
        <button type="submit" class="btn btn-success">Register</button>
    </form> 
    <%}%>
  </nav>
</header>